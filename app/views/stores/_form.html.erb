<%= form_with(model: store) do |form| %>
  <% if store.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(store.errors.count, "error") %>
        prohibited this product from being saved:</h2>

      <div>
        <%= store.errors.full_messages.to_sentence.capitalize %>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.telephone_field :phone_number %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :mission_statement, style: "display: block" %>
    <%= form.text_field :mission_statement %>
  </div>

  <div>
    <% form.label :spotlight %>
    <%= form.file_field :spotlight %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <%= link_to "Cancel", stores_path, class: "btn btn--light" %>
<% end %>
<% if @store.spotlight.attached? %>
  <div><%= image_tag @store.spotlight %></div>
  <%= button_to "Remove Image", store_remove_spotlight_path(@store), method: :post %>
<% end %>
